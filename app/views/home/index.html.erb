<div class="w-full">
  <h1 class="font-bold md:text-3xlxl text-4xl text-center lg:text-left">Recently Uploaded <span class="text-red-500">Blogs</span></h1>
  <div class="mt-16 space-y-4 p-4 bg-gray-200 w-full rounded">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <ul class="bg-white p-4 rounded space-y-5">
          <li>by:
            <span class="font-semibold text-red-500">
              <%= link_to post.user.username, show_user_path(post.user), class:"font-semibold text-red-500 hover:underline" %>
            </span>
          </li>
          <li class="font-bold md:text-lg"><%= post.title %></li>
          <li><%= link_to "Read more", post_item_path(post), class:"rounded font-semibold border-2 p-1 border-red-500 text-red-500 hover:bg-red-500 hover:text-white" %></li>
        </ul>
      <% end %>
    <% else %>
      <div>
        <h2 class="text-2xl font-semibold text-red-600">There are no posts for now</h2>
        <% if Current.user %>
          <%= link_to "Be the first by uploading yours!", post_blog_path, class:"text-xl px-2 mt-4 py-1 inline-block bg-black rounded text-white hover:text-red-500 duration-300" %>
        <% else %>
          <%= link_to "create an account and post your first!", register_path, class:"text-xl px-2 mt-4 py-1 inline-block bg-black rounded text-white hover:text-red-500 duration-300" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
